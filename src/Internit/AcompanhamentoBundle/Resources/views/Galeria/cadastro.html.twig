<form class="formAjax" action="{{ path('tupi_acompanhamento_galeria_new' , { 'filter' : filter }) }}">
	{{ form_row(form.id) }} 
	{{ form_row(form.name) }} 
	{{ form_row(form._token) }}
	<button class="novo botao_acao" type="button" data-action="{{ path('tupi_acompanhamento_galeria_new' , { 'filter' : filter }) }}">Novo</button>
	<button class="salvar botao_acao" type="submit">Salvar</button>
</form>

<table id="table-list">
	<thead>
	    <tr>
	        <th class="titulo">Nome</th>
	        <th>Ações</th>
		</tr>
	</thead>
	<tbody>
		{% for item in list %}
		<tr>
	        <td>{{ item.name }}</td>
	        <td>
	           <button class="edit botao_acao" type="button" data-action="{{ path('tupi_acompanhamento_galeria_edit' , { 'filter' : filter , 'id' : item.id}) }}">Editar</button>
    	       <button class="remove botao_acao" type="button" data-action="{{ path('tupi_acompanhamento_galeria_remove' , { 'filter' : filter , 'id' : item.id }) }}">Excluir</button>
    	       <button class="new botao_acao changeTab" type="button" onclick="changeTab(5,'{{ path('tupi_acompanhamento_galeria_imagem' , { 'filter' : item.id , 'bloco' : filter }) }}')">Adicionar Imagem</button>
    	    </td>
		</tr>
		{% endfor %}
	</tbody>
</table>

<button class="new botao_acao changeTab" type="button" onclick="changeTab(1)">Voltar</button>