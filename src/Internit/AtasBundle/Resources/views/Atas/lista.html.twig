	<td {% if item.active == 0 %}style="opacity:0.5;"{% endif %}>{{item.dataVigente}}</td>
	<td {% if item.active == 0 %}style="opacity:0.5;"{% endif %}>{% if item.active == 1 %}Vis√≠vel{% else %}Desativado{% endif %}</td>
	<td {% if item.active == 0 %}style="opacity:0.5;"{% endif %}>{{item.createdAt|date("d/m/Y H:i:s")}}</td>
	<td {% if item.active == 0 %}style="opacity:0.5;"{% endif %}>{{item.updatedAt|date("d/m/Y H:i:s")}}</td>
{% endblock %}