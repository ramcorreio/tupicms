{% extends 'TupiAdminBundle:Template:main.html.twig' %}

{% block botoes %}
	{{ admin.form_button('tupi_contact_home', 'Voltar', {'class': 'voltar'}) }}
	{{ admin.sbutton('Salvar', 'salvar', admin.id_by_name(form)) }}
{% endblock %}

{% set title_controle = 'Responder contato' %}

{% block main %}
<div class="formulario esp_top">
	<div class="tabs col12">
		{{ form_start(form) }}
			{{ form_row(form.id) }}
			<div id="arquivos" class="box">
			    <ul class="col6">
					<li>Nome:{{ form_row(form.name) }}</li>
					<li>Email:{{ form_row(form.email) }}</li>
				</ul>
			    <ul class="col6">
					<li>Telefone:{{ form_row(form.telefone) }}</li>
					<li>Celular:{{ form_row(form.celular) }}</li>
				</ul>
				<ul class="col6">
					<li>Departamento:{{ form_row(form.assunto) }}</li>
					<li>Conheceu:{{ form_row(form.conheceu) }}</li>
				</ul>
				<ul class="col12">
					<li>Mensagem:{{ form_row(form.message) }}</li>
					<li>{{ form_row(form.answer) }}</li>
				</ul>
			</div>
		{{ form_end(form) }}
	</div>
</div>
{% endblock %}