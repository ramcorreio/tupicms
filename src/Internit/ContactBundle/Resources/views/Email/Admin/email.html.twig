	{% if mensagem is not empty %}
		<p style="	display: block;width: 640px;margin: 10px 5px;border: 1px solid #eeeeee;padding: 10px;text-align: justify;box-sizing: border-box;clear: both;">{{ mensagem }}</p>
	{% endif %}
	{% if conheceu is not empty %}
		<p style="	display: block;width: 640px;margin: 10px 5px;border: 1px solid #eeeeee;padding: 10px;text-align: justify;box-sizing: border-box;clear: both;">{{ conheceu }}</p>
	{% endif %}
{% endblock %}